@model UserProfileViewModel

@{
    ViewData["title"] = Model._user.Nickname + " Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Library Profile</title>
</head>
<body>

    <div class="container" style="padding-bottom:16px;">
        <div class="row banner">
            <div class="col-md-12" style="padding:20px 0;">
                @{
                    if (Model._user.UserImage == null || Model._user.UserImage.Length == 0)
                    {
                        <div style="width: auto; margin: auto; height: 300px; border-radius:50%; background-image: url('data:image/png;base64,'); background-size: 100% 100%">
                        </div>
                    }
                    else
                    {
                        <div style="width: 300px; margin:auto; height: 300px; border-radius:50%; background-image: url('data:image/png;base64,@Convert.ToBase64String(Model._user.UserImage)'); background-size: 100% 100%">
                        </div>
                    }
                }
            </div>

        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="container" style="padding-bottom:16px;">
                <h2>About Me</h2>
                @{
                    if (Model._user.UserDescription != null)
                    {
                        <p>@Model._user.UserDescription</p>
                    }
                    else
                    {
                        <p>Tell everyone about you</p>
                    }
                }
            </div>
        </div>

        <div class="col-md-4">
            <h1>@Model._user.Nickname</h1>
            <p>Library Member</p>
            <p>Email: @Model._user.Email</p>
            <p>Library Card Number: XXXXXX</p>
            <p>Location: City, Country</p>
        </div>

        <div class="col-md-4">
            <h1>@Model._user.Nickname</h1>
            <p>Library Member</p>
            <p>Email: @Model._user.Email</p>
            <p>Library Card Number: XXXXXX</p>
            <p>Location: City, Country</p>
        </div>
    </div>
    <div class="container mt-5" style="padding-bottom:16px;">
        <h2>Reading List</h2>
        <p>
            My book shelves:
        </p>
        <div class="container" style="padding-bottom:16px;">
            <div class="row">
                <a class="card1" href="@Url.Action("ShowUserBookList", "Home", new {UserId = Model._user.Id, num = 1 })">
                    <h3>Books I've Read</h3>
                    <div class="go-corner" href="@Url.Action("ShowUserBookList", "Home", new {UserId = Model._user.Id, num = 1 })">
                        <div class="go-arrow">
                            →
                        </div>
                    </div>
                </a>
            </div>
            <div class="row">
                <a class="card1" href="@Url.Action("ShowUserBookList", "Home", new {UserId = Model._user.Id, num = 2 })">
                    <h3>Books I`m currently reading</h3>
                    <div class="go-corner" href="@Url.Action("ShowUserBookList", "Home", new {UserId = Model._user.Id, num = 2 })">
                        <div class="go-arrow">
                            →
                        </div>
                    </div>
                </a>
            </div>
            <div class="row">
                <a class="card1" href="@Url.Action("ShowUserBookList", "Home", new {UserId = Model._user.Id, num = 3 })">
                    <h3>Books I plan to read</h3>
                    <div class="go-corner" href="@Url.Action("ShowUserBookList", "Home", new {UserId = Model._user.Id, num = 3 })">
                        <div class="go-arrow">
                            →
                        </div>
                    </div>
                </a>
            </div>
            <div class="row">
                <a class="card1" href="@Url.Action("ShowUserBookList", "Home", new {UserId = Model._user.Id, num = 4 })">
                    <h3>Favorite books</h3>
                    <div class="go-corner" href="@Url.Action("ShowUserBookList", "Home", new {UserId = Model._user.Id, num = 4 })">
                        <div class="go-arrow">
                            →
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <div class="container mt-5" style="padding-bottom:16px;">
        <h2>Library Activity</h2>
        <div class="card-deck">
            @Html.Partial("/Views/Home/ShowEventList.cshtml", Model._userEventList)
        </div>
    </div>

    <div class="container mt-5" style="padding-bottom:16px;">
        <h2>Reading Goals</h2>
        @{
            if (Model._user.UserGoals != null)
            {
                <p>@Model._user.UserGoals</p>
            }
            else
            {
                <p>What are your goals?</p>
            }
        }
    </div>
</body>
</html>

