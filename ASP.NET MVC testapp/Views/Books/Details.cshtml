@model ASP.NET_MVC_testapp.Models.Book

@{
    ViewData["title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>
<h4>Book</h4>
<hr />
<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <div style="width: auto; height: 480px; background-image: url('data:image/png;base64,@Convert.ToBase64String(Model.Book_image)'); background-size: 100% 100%">
            
            </div>
            @if (User.IsInRole("Admin"))
            {
                <div class="d-flex justify-content-center">
                    <a class="btn btn-primary w-100 mt-2" asp-area="" asp-controller="Books" asp-action="Edit" asp-route-id="@Model.BookId">Edit</a>
                    <a class="btn btn-primary w-100 mt-2" asp-area="" asp-controller="Books" asp-action="Delete" asp-route-id="@Model.BookId">Delete</a>
                </div>
            }
            @if (User.IsInRole("User") || User.IsInRole("Admin"))
            {
                <form action="/MyBooks/OnPostAddToMyBook" method="post">
                    <input type="hidden" name="BookId" value="@Model.BookId" />
                    @{
                        if (User.IsInRole("User") || User.IsInRole("Admin"))
                        {
                            <select name="SelectedOption">
                                <option value="favorites">To favorite</option>
                                <option value="alreadyRead">To Already Read</option>
                                <option value="currentlyReading">To Current Reading</option>
                                <option value="willRead">To Future Read</option>
                            </select>
                            <button type="submit" class="btn btn-primary mx-2">Add to MyBook</button>
                        }
                    }
                </form>
            }
            <a class="btn btn-primary w-100 mt-2" asp-area="" asp-controller="Books" asp-action="IndexLib">Back to list</a>
        </div>
        <div class="col-md-8">
            <h1>@Model.Title</h1>
            <p>Author: @Model.AuthorName @Model.AuthorSurname</p>
            <hr>
            <h4>Genre</h4>
            <p>@Model.Genre</p>
            <h4>Description:</h4>
            <p>@Model.BookDescription</p>
            <hr>
            <h4>Page number:</h4>
            <p>@Model.Pages p.</p>
            <h4>Release date:</h4>
            <p>@Model.ReleaseDate year</p>
        </div>
    </div>
</div>
