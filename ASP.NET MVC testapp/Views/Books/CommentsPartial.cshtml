@model List<Comment>
<div>
    @{
        foreach (var item in Model)
        {
            <a asp-controller="Home" asp-action="UserProfile" asp-route-UserId="@item.User.Id" style="text-decoration:none">
                <div class="comment row" style="margin-left:0;">
                    <div class="row" style="margin-top: 10px;">
                        @if (@item.User.UserImage == null || @item.User.UserImage.Length == 0)
                        {
                            <div style="width: auto; height: 35px; width: 35px; border-radius:50%; background-image: url('data:image/png;base64,'); background-size: 100% 100%">
                            </div>
                        }
                        else
                        {
                            <div class="col-md-1" style="width: 35px; height: 35px; border-radius:50%; background-image: url('data:image/png;base64,@Convert.ToBase64String(item.User.UserImage)'); background-size: 100% 100%"></div>
                        }
                        <h4 class="col-md-4">@item.User.Nickname</h4>

                        <div class="col-md-5"></div>
                        <p style="color:gray; margin-top:3px;" class="col-md-auto">@item.DateAndTime</p>
                    </div>
                    <p class="col-md-auto">@item.CommentText</p>
                </div>
            </a>
        }
    }
</div>
